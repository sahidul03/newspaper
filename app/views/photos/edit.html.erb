<!-- Main content -->
<section class="content">



  <!-- Main row -->
  <div class="row">
    <!-- Left col -->
    <section class="col-lg-12 connectedSortable">
      <!-- Box (with bar chart) -->
      <!-- quick email widget -->
      <div class="box box-info">
        <div class="box-header">
          <i class="fa fa-check"></i>
          <h3 class="box-title">Edit Photo
          </h3>
          <%= link_to gallery_path(@gallery),:data => { :no_turbolink => true } do %>
              <h4 class="text-right" style="margin-right:10px ">
                <i class="fa fa-photo"></i>
                <%= @gallery.title %>
              </h4>
          <% end %>

          <!-- tools box -->

        </div>
        <%= render 'photos/form' %>
      </div>
    </section><!-- /.Left col -->
    <!-- right col (We are only adding the ID to make the widgets sortable)-->
    <!-- right col -->
  </div><!-- /.row (main row) -->

</section><!-- /.content -->