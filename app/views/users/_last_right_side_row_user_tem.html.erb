<% if LastRightSideAd.any? %>
    <% LastRightSideAd.last(2).each do |ad| %>
        <div class="widget add-banner">
          <a href="<%= ad.link %>" target="_blank">
            <%= image_tag(ad.ad_picture) %>
          </a>
        </div>
    <% end %>
<% end %>
<!-- Widget top rated -->
<div class="widget">
  <div class="widget_title"><h3>সর্বাধিক পঠিত</h3></div>
  <div class="tb_widget_top_rated clearfix">
    <% if @most_viewed_news.any? %>
        <% @most_viewed_news.each do |mv_news| %>
            <div class="item clearfix">
              <div class="item_thumb clearfix">
                <%= link_to news_path(mv_news, :class=>'visible animated'), alt: 'Post',:data => { :no_turbolink => true } do  %>
                    <%= image_tag mv_news.photo %>
                <% end %>
                <!--<a href="#"><img src="/images/2.jpg" alt="Post" class="visible animated"></a>-->
              </div>
              <div class="item_content">

                <h4>
                  <%= link_to mv_news.title, news_path(mv_news),:data => { :no_turbolink => true } %>
                  <!--<a href="#">পদ্মা সেতু নির্মাণে বিঘ্ন ঘটার আশঙ্কা নেই : সেতুমন্ত্রী</a>-->
                </h4>
              </div>

            </div>
        <% end %>
    <% end %>
  </div>
</div><!-- End Widget top rated -->

