                      <%= link_to photo_gallery_news_index_path(Gallery.last) do %>
                          <%= image_tag(photo.image, alt: 'Slider', height: 150) %>
                    <% end %>

                      <div class="slider_caption">

                        <div class="thumb_link">
                          <h6>
                            <%= link_to  photo.title.to_s[0..35],  photo_gallery_news_index_path(Gallery.last) if photo.title %>
                          </h6>
                        </div>
                      </div>
                    </li><!-- End Item -->
            <% end %>
        <% end %>
        <% end %>

      </ul>
