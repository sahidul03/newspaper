<section class="content">
  <!-- Main row -->
  <div class="row">
    <!-- Left col -->
    <section class="col-lg-12 connectedSortable">
      <div class="box box-info">
        <div class="box-header">
          <i class="fa fa-check"></i>
          <h3 class="box-title">Add Header and Bottom Ad</h3>
          <!-- tools box -->

        </div>
        <%= form_for @hf_ad do |f| %>

            <div class="box-body">
              <div class="form-group pad">
                <div class="btn btn-success btn-file">
                  <i class="fa fa-paperclip"></i> Ad Image
                  <%= f.file_field :ad_picture, :class=>'' %>
                </div>
                <p class="help-block">Size(990,110)</p>
              </div>
            </div>
            <div class="box-footer clearfix">
              <%= f.submit :class=>'pull-right btn btn-default' %>
              <!--<button class="pull-right btn btn-default" id="sendEmail">Create <i class="fa fa-check"></i></button>-->
            </div>
        <% end %>
      </div>
      <!-- Box (with bar chart) -->
      <div class="box box-info">
        <div class="box-header">
          <i class="fa fa-check"></i>
          <h3 class="box-title">Header and Bottom Ad</h3>
          <!-- tools box -->

        </div>
        <!-- Box (with bar chart) -->
        <!-- quick email widget -->


        <div class="table-responsive">
          <!-- .table - Uses sparkline charts-->
          <% if @header_footer_ads.any? %>
              <table class="table table-striped">
                <tr>
                  <th class="col-md-8">Ad</th>
                  <th class="col-md-2">Date</th>
                  <th class="text-right col-md-2">Delete</th>
                </tr>
                <% @header_footer_ads.each do |hf_ad| %>
                    <tr>
                      <td>
                        <%= image_tag(hf_ad.ad_picture,:class => 'ad_image_show') %>
                      </td>

                      <td><%= hf_ad.created_at.strftime('%d %B, %y') %></td>
                      <td class="text-right">

                        <div class="btn-group">
                          <%= link_to header_bottom_ad_path(hf_ad), :class=>'btn btn-info', method: :delete,data: { confirm: 'Are you sure?' } do %>
                              <i class='fa fa-align-center fa-crop'></i> delete
                          <% end %>
                        </div>

                      </td>
                    </tr>
                <% end %>
              </table><!-- /.table -->
          <% end %>

        </div>
      </div>
    </section><!-- /.Left col -->
    <!-- right col (We are only adding the ID to make the widgets sortable)-->

  </div><!-- /.row (main row) -->

</section><!-- /.content -->
