<div class="box box-info">
  <div class="box-header">
    <i class="fa fa-check"></i>
    <h3 class="box-title"> News Details</h3>
    <%= link_to posts_path, :class=>'pull-right btn btn-default category_create_button' do %>
        All News
    <% end %>
    <%= link_to new_post_path, :class=>'pull-right btn btn-default category_create_button' do %>
        Create new News <i class="fa fa-check"></i>
    <% end %>
    <%= link_to edit_post_path(@post), :class=>'pull-right btn btn-default category_create_button' do %>
        <i class='fa fa-align-left fa-edit'></i> edit
    <% end %>
    <%= link_to post_path(@post), :class=>'pull-right btn btn-default category_create_button', method: :delete,data: { confirm: 'Are you sure?' } do %>
        <i class='fa fa-align-right fa-crop'></i> delete
    <% end %>
    <!-- tools box -->

  </div>
</div>
<section class="content-header">
  <h1>
    Timeline
    <small>example</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li><a href="#">UI</a></li>
    <li class="active">Timeline</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">

  <!-- row -->
  <div class="row">
    <div class="col-md-12">
      <!-- The time line -->
      <ul class="timeline">
        <!-- timeline time label -->
        <li class="time-label">
                                    <span class="bg-red">
                                        <%= @post.created_at.strftime('%d %B, %y') %>
                                    </span>
        </li>
        <!-- /.timeline-label -->
        <!-- timeline item -->
        <li>
          <i class="fa fa-envelope bg-blue"></i>
          <div class="timeline-item">
            <span class="time"><i class="fa fa-clock-o"></i> <%= @post.created_at.strftime('%I:%M %P') %></span>
            <h2 class="timeline-header"><a href="#">Title :</a> <%= @post.title %></h2>
            <div class='timeline-footer'>
              <a class="btn btn-primary btn-xs"><%= @post.category.name %></a>
              <% if @post.division %>
                    <a class="btn btn-primary btn-xs"><%= @post.division.name %></a>
              <% end %>
              <% if @post.view_count %>
                  <a class="btn btn-primary btn-xs">Views : <%= @post.view_count %></a>
              <% end %>

            </div>
            <div class="timeline-body">
              <p>
                <%= @post.content %>
              </p>
            </div>

          </div>
        </li>
        <!-- END timeline item -->

        <!-- timeline item -->
        <% if @post.photo %>
            <li>
              <i class="fa fa-camera bg-purple"></i>
              <div class="timeline-item">
                <h3 class="timeline-header"> uploaded  photos</h3>
                <div class="timeline-body responsive_images img-responsive">
                  <%= image_tag(@post.photo, :class=>'margin') %>

                </div>
              </div>
            </li>
        <% end %>
        <% if @post.video %>
            <li>
              <i class="fa fa-video-camera bg-maroon"></i>
              <div class="timeline-item">
                <h3 class="timeline-header"> shared a video</h3>
                <div class="timeline-body">
                  <%= @post.video.html_safe %>

                </div>
              </div>
            </li>
        <% end %>
        <!-- END timeline item -->
        <!-- timeline item -->

        <!-- END timeline item -->
        <li>
          <i class="fa fa-clock-o"></i>
        </li>
      </ul>
    </div><!-- /.col -->
  </div><!-- /.row -->



</section><!-- /.content -->
<!-- Main content -->