<section class="content">
  <!-- Main row -->
  <div class="row">
    <!-- Left col -->
    <section class="col-lg-12 connectedSortable">
      <div class="box box-info">
        <div class="box-header">
          <i class="fa fa-check"></i>
          <h3 class="box-title">Add Breaking News</h3>
          <!-- tools box -->

        </div>
        <%= form_for @br_news do |f| %>

            <div class="box-body">
              <div class="form-group">
                <%= f.text_field :title, :class=>'form-control', :placeholder=>'Breaking News title.....' %>
                <!--<input type="email" class="form-control" name="emailto" placeholder="category name..."/>-->
              </div>
            </div>
            <div class="box-footer clearfix">
              <%= f.submit :class=>'pull-right btn btn-default' %>
              <!--<button class="pull-right btn btn-default" id="sendEmail">Create <i class="fa fa-check"></i></button>-->
            </div>
        <% end %>
      </div>
      <!-- Box (with bar chart) -->
      <div class="box box-info">
        <div class="box-header">
          <i class="fa fa-check"></i>
          <h3 class="box-title">Breaking News</h3>
          <!-- tools box -->

        </div>
        <!-- Box (with bar chart) -->
        <!-- quick email widget -->


        <div class="table-responsive">
          <!-- .table - Uses sparkline charts-->
          <% if @breaking_news.any? %>
              <table class="table table-striped">
                <tr>
                  <th class="col-md-8">Breaking news</th>
                  <th class="col-md-2">Date</th>
                  <th class="text-right col-md-2">Delete</th>
                </tr>
                <% @breaking_news.each do |br_news| %>
                    <tr>
                      <td>
                        <%= link_to br_news.title %>
                      </td>

                      <td><%= br_news.created_at.strftime('%d %B, %y') %></td>
                      <td class="text-right">

                        <div class="btn-group">
                          <%= link_to breaking_news_path(br_news), :class=>'btn btn-info', method: :delete,data: { confirm: 'Are you sure?' } do %>
                              <i class='fa fa-align-center fa-crop'></i> delete
                          <% end %>
                        </div>

                      </td>
                    </tr>
                <% end %>
              </table><!-- /.table -->
          <% end %>

        </div>
      </div>
    </section><!-- /.Left col -->
    <!-- right col (We are only adding the ID to make the widgets sortable)-->

  </div><!-- /.row (main row) -->

</section><!-- /.content -->
