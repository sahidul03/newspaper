<div class="box box-info">
  <div class="box-header">
    <i class="fa fa-check"></i>
    <h3 class="box-title"> Gallery Details</h3>
    <%= link_to galleries_path, :class=>'pull-right btn btn-default category_create_button',:data => { :no_turbolink => true } do %>
        All Galleries
    <% end %>
    <%= link_to new_gallery_path, :class=>'pull-right btn btn-default category_create_button',:data => { :no_turbolink => true } do %>
        Create new Gallery <i class="fa fa-check"></i>
    <% end %>
    <%= link_to edit_gallery_path(@gallery), :class=>'pull-right btn btn-default category_create_button',:data => { :no_turbolink => true } do %>
        <i class='fa fa-align-left fa-edit'></i> edit
    <% end %>
    <%= link_to gallery_path(@gallery), :class=>'pull-right btn btn-default category_create_button', method: :delete,data: { confirm: 'Are you sure?' } do %>
        <i class='fa fa-align-right fa-crop'></i> delete
    <% end %>
    <!-- tools box -->

  </div>
</div>
<section class="content-header">
  <h1>
    Photo Gallery

  </h1>
  <ol class="breadcrumb">
    <span class="time">
                      <%= link_to new_gallery_photo_path(@gallery), :class=>'btn btn-primary btn-xs',:data => { :no_turbolink => true } do %>
                             <i class='fa fa-align-left fa-plus'></i> Add more photo
                       <% end %>
                    </span>
  </ol>
</section>

<!-- Main content -->
<section class="content">

  <!-- row -->
  <div class="row">
    <div class="col-md-12">
      <!-- The time line -->
      <ul class="timeline">
        <!-- timeline time label -->
        <li class="time-label">
                                    <span class="bg-red">
                                        <%= @gallery.created_at.strftime('%d %B, %y') %>
                                    </span>
        </li>
        <!-- /.timeline-label -->
        <!-- timeline item -->
        <li>
          <i class="fa fa-envelope bg-blue"></i>
          <div class="timeline-item">
            <span class="time"><i class="fa fa-clock-o"></i> <%= @gallery.created_at.strftime('%I:%M %P') %></span>
            <h2 class="timeline-header"><a href="#">Title :</a> <%= @gallery.title %></h2>
            <div class='timeline-footer'>
              <!--<a class="btn btn-primary btn-xs"><%#= @gallery.category.name %></a>-->
              <!--<%# if @gallery.division %>-->
                  <!--<a class="btn btn-primary btn-xs"><%#= @gallery.division.name %></a>-->
              <!--<%# end %>-->
              <!--<%# if @gallery.view_count %>-->
                  <!--<a class="btn btn-primary btn-xs">Views : <%#= @gallery.view_count %></a>-->
              <!--<%# end %>-->

            </div>

          </div>
        </li>
        <!-- END timeline item -->

        <!-- timeline item -->
        <% if @gallery.photos.any? %>
            <% @gallery.photos.each do |photo| %>
                <li>
                  <i class="fa fa-camera bg-purple"></i>
                  <div class="timeline-item">
                    <span class="time">
                      <%= link_to edit_gallery_photo_path(@gallery,photo), :class=>'btn btn-primary btn-xs',:data => { :no_turbolink => true } do %>
                             <i class='fa fa-align-left fa-edit'></i> edit
                       <% end %>
                      <%= link_to gallery_photo_path(@gallery,photo), :class=>'btn btn-primary btn-xs', method: :delete,data: { confirm: 'Are you sure?' } do %>
                             <i class='fa fa-align-right fa-crop'></i> delete
                      <% end %>
                    </span>
                    <h3 class="timeline-header"> <%= photo.title %></h3>
                    <div class="timeline-body responsive_images img-responsive">
                      <%= image_tag(photo.image, :class=>'margin') %>

                    </div>
                  </div>
                </li>
            <% end %>
        <% end %>
        <!-- END timeline item -->
        <!-- timeline item -->

        <!-- END timeline item -->
        <li>
          <i class="fa fa-clock-o"></i>
        </li>
      </ul>
    </div><!-- /.col -->
  </div><!-- /.row -->



</section><!-- /.content -->
<!-- Main content -->